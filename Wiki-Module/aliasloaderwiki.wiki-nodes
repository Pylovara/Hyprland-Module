SUCHBEGRIFF="${1:-pylovara}"
SUCHPFAD="${2:-$(pwd)}"

echo "üîç Pylovara Wiki-Suche: '$SUCHBEGRIFF'"
echo "üìÇ Durchsuche: $SUCHPFAD"
echo "---------------------------------------------"

find "$SUCHPFAD" -type f -name "*.wiki.notes" | while read -r datei; do
    treffer=$(grep -i "$SUCHBEGRIFF" "$datei")
    if [[ -n "$treffer" ]]; then
        echo "üìÑ Datei: $datei"
        echo "$treffer" | sed 's/^/   ‚Üí /'
        echo "---------------------------------------------"
    fi
done
