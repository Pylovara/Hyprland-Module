#!/bin/bash
# dna.core-bash-dna – Zentrale Schaltstelle für DNA-Kommandos

# Pfad Basis
BASE_DIR="Pylovara/SystemDirectory/DirectoryManager/MCS-DNA/MCS-BASH/

# Dispatcher für .core-bash-dna Kommandos

DNA() {
    local cmd="$1"
    shift
    local dnafile="$BASE_DIR/${cmd}.core-bash-dna"

    if [[ -f "$dnafile" ]]; then
        source "$dnafile"
        DNA_EXEC "$@"
    else
        echo "❌ DNA-Kommando '$cmd' nicht gefunden."
    fi
}
export -f DNA
