################################################################################
# SystemControl.pv-conf MCS-DNA (Prototyp 1.0)
source_all_dna() {
    for file in Pylovara/SystemDirectory/DirectoryManager/MCS-DNA/MCS-BASH/*.core-bash-dna; do
        source "$file"
    done
}
